cmap: CONTACT_MATRIX ...
   GROUP=1-201
   SWITCH={RATIONAL D_0=1.0 R_0=0.5 D_MAX=2.0}
   COMPONENTS
...

# Now construct histogram
cmapn_d2: COMBINE ARG1=cmap.x ARG2=cmap.y ARG3=cmap.z POWERS=2,2,2 PERIODIC=NO
cmapn_d: CUSTOM ARG1=cmapn_d2 FUNC=sqrt(x) PERIODIC=NO
cmapn_x: CUSTOM ARG1=cmap.x ARG2=cmapn_d FUNC=x/y PERIODIC=NO
cmapn_y: CUSTOM ARG1=cmap.y ARG2=cmapn_d FUNC=x/y PERIODIC=NO
cmapn_z: CUSTOM ARG1=cmap.z ARG2=cmapn_d FUNC=x/y PERIODIC=NO
h: SPHERICAL_KDE ARG1=cmapn_x ARG2=cmapn_y ARG3=cmapn_z HEIGHTS=cmap.w CONCENTRATION=10 GRID_BIN=100
iv: INTEGRATE_GRID ARG=h PERIODIC=NO

b: RESTRAINT ARG=iv AT=0.75 KAPPA=10.0
PRINT ARG=iv,b.* FILE=colvar FMT=%8.4f
